package controlador;

import java.io.IOException;
import java.sql.SQLException;
import java.util.ArrayList;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import modelo.*;


@WebServlet("/votarPalabra")
public class votarPalabra extends HttpServlet {
	private static final long serialVersionUID = 1L;

	private String voto;
	
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		if (request.getParameter("pal") != null || request.getParameter("pal").isEmpty()) {
			request.setAttribute("error", "no has marcado nada");
		} else {
			DAO d = new DAO("encuesta");
			voto = request.getParameter("pal");
			try {
				ArrayList<Palabras> p = (ArrayList<Palabras>) d.buscarPalabra(voto);
				d.modificar(p.get(0));
				
			} catch (SQLException e) {
				System.out.println(e.getMessage());
			} 
		}
	}
	
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		DAO d = new DAO("encuesta");
		try {
			ArrayList<Palabras> p = (ArrayList<Palabras>) d.buscar();
			ArrayList<String> palabraVoto = new ArrayList<String>();
			String[] palabra;
			for (Palabras pals : p) {
				palabra = pals.resul().split(":");
				palabraVoto.add(palabra[0]);
			}
			request.setAttribute("listaP", palabraVoto);
			request.getRequestDispatcher("votarPalabra.jsp").forward(request, response);
		} catch (Exception e) {
			System.out.println(e.getMessage());
		}
	}

}
